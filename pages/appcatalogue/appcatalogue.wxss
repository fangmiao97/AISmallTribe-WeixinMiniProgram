/* pages/appcatalogue/appcatalogue.wxss */
.bg_blue{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 250rpx;
  background-color: #576cd4
}
.title{
  color: #ffffff;
  font-size: 50rpx;
  margin-left: 30rpx;
  font-weight: bolder
}
.intro{
  color: #ffffff;
  font-size: 30rpx;
  margin-left: 30rpx 
}
.content_table{
  padding-left: 37.5rpx
}
.apply_block{
  display: flex;
  flex-direction: row;
  width: 675rpx;
  height: 170rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0px 0px 12px #CDD2FD;
  padding-top: 25rpx
}

.txtgroup{
  display: flex;
  flex-direction: column;
  width: 80%
}
.txthehe{
  color: #000000;
  padding-left: 20rpx;
  font-size: 32rpx;
  font-weight: bold
}
.txthehehe{
  color: #787fa2;
  padding-left: 20rpx;
  font-size: 30rpx;
  margin-top: 10rpx
}
.icon{
  height: 125rpx;
  width: 125rpx;
  padding-right: 20rpx;
  padding-top: 13rpx;
  float: right
}
.bottominfo{
  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.info_text{
  color: #aaa;
  font-size: 25rpx;
}
